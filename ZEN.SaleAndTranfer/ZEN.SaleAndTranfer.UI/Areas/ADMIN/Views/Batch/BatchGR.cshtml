@model ZEN.SaleAndTranfer.VM.ADMIN.BatchVM

@{
    ViewBag.Title = "BatchGR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        var runBatchGRFlag = '@ViewBag.RunBatchGRFlag';

        if (runBatchGRFlag == 1 || runBatchGRFlag == "1") {
            alert('run Batch GR Success');
        }
        else if ((runBatchGRFlag == 0 || runBatchGRFlag == "0") && runBatchGRFlag != "")
            alert('run Batch PR not Success');
    });

    function gotoRunBatchGR() {
        if (confirm('@ViewBag.msgConfirmRunBatchGR')) {
            $('body').addClass('img-loading');

            var url1 = '@Url.Action("RunBatchGR")';
            url1 = url1.substring(0, url1.lastIndexOf("RunBatchGR")).concat("RunBatchGR");

            var vform = $('#form1');
            vform.attr("action", url1);
            vform.attr("method", "post");
            vform.submit();
        }
        else {
            return false;
        }
    }
</script>

<form class="form-horizontal" id="form1">
    <div class="container">
        <h2>หน้าจอจัดการ Batch : <small>Batch ใบรับสินค้า (GR)</small></h2>
        <hr />

        @Html.Partial("_MessagePartial", Model.MessageList)

        <div class="panel panel-primary">
            <div class="panel-heading">จัดการ Batch ของ ใบรับสินค้า (GR)</div>
            <div class="panel-body">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-sm-3">หมายเลขใบรับสินค้า (GR) : </label>
                        <div class="col-md-6">
                            @Html.TextAreaFor(m => m.batchVM_MA.ST_GR_CODE, new { @class = "form-control", @rows = "6", @col = "20" })
                            <p class="help-block">1 ใบรับสินค้าต่อ 1 บรรทัด.</p>
                            <p style="color: #ff0000;">ข้อควรระวัง - หากไม่ระบุหมายเลข GR จะเป็นการส่งข้อมูลไปยัง Navision ทั้งหมด</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <input type="button" class="btn btn-primary btn-sm btn-block" value="ปรับปรุงข้อมูลใบรับสินค้า (GR)" onclick="gotoRunBatchGR();" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>