@model ZEN.SaleAndTranfer.VM.ADMIN.BatchVM

@{
    ViewBag.Title = "BatchPR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        var runBatchPRFlag = '@ViewBag.RunBatchPRFlag';

        if (runBatchPRFlag == 1) {
            alert('run Batch PR Success');
        }
        else if ((runBatchPRFlag == 0 || runBatchPRFlag == "0") && runBatchPRFlag != "")
            alert('run Batch PR not Success');
    });

    function gotoRunBatchPR() {
        if (confirm('@ViewBag.msgConfirmRunBatchPR')) {
            $('body').addClass('img-loading');

            var url1 = '@Url.Action("RunBatchPR")';
            url1 = url1.substring(0, url1.lastIndexOf("RunBatchPR")).concat("RunBatchPR");

            var vform = $('#form1');
            vform.attr("action", url1);
            vform.attr("method", "post");
            vform.submit();
        }
        else {
            return false;
        }
    }
</script>

<form class="form-horizontal" id="form1">
    <div class="container">
        <h2>หน้าจอจัดการ Batch : <small>Batch ใบตลาด</small></h2>
        <hr />

        @Html.Partial("_MessagePartial", Model.MessageList)

        <div class="panel panel-primary">
            <div class="panel-heading">จัดการ Batch ของ ใบตลาด</div>
            <div class="panel-body">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-sm-3">หมายเลขใบตลาด : </label>
                        <div class="col-md-6">
                            @Html.TextAreaFor(m => m.batchVM_MA.ST_PR_CODE, new { @class = "form-control", @rows = "6", @col="20" })
                            <p class="help-block">1 ใบตลาดต่อ 1 บรรทัด.</p>
                            <p style="color: #ff0000;">ข้อควรระวัง - หากไม่ระบุหมายเลข PR จะเป็นการส่งข้อมูลไปยัง Navision ทั้งหมด</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <input type="button" class="btn btn-primary btn-sm btn-block" value="ปรับปรุงข้อมูลใบตลาด (PR)" onclick="gotoRunBatchPR();" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>