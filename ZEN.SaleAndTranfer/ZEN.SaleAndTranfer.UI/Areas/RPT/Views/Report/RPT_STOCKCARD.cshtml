<title>@ViewBag.Title</title>
<script>
    $(document).ready(function ($) {

        $('#ifrReport').on('load', function () {
            $(this).show();
            $('body').removeClass("img-loading");
            //console.log('load the iframe')
        });

    });
</script>

<form class="form-horizontal" id="form1">
    @if (ViewBag.OpenReportType == 1 || ViewBag.OpenReportType == '1')
    {
        <iframe src="/Reports/View/server/RPT_STOCKCARD_SEARCH/rpprmData=@ViewBag.ReportData"
                id="ifrReport"
                style="width: 100%; height: 900px;" frameborder="0" marginheight="0" marginwidth="0" class="form-control"></iframe>
    }
    else
    {
        <iframe src="/Reports/View/server/RPT_STOCKCARD_GETITEM/rpprmData=@ViewBag.ReportData"
                id="ifrReport"
                style="width: 100%; height: 900px;" frameborder="0" marginheight="0" marginwidth="0" class="form-control"></iframe>
    }
</form>
